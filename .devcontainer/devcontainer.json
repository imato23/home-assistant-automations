{
  "name": "NetDaemon App-development",
  "dockerFile": "./Dockerfile",
  "postCreateCommand": "dotnet restore *.csproj",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.fontSize": 12
  },
  "extensions": [
    "ms-dotnettools.csharp"
  ],
  "mounts": [
    "source=/mnt/homeassistant/netdaemon6,target=/mnt/homeassistant/netdaemon6,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--env",
    "TZ=Europe/Berlin"
  ],
  "containerEnv": {
    "TZ": "Europe/Berlin"
  },
  "postCreateCommand": "ln -sf /usr/share/zoneinfo/Europe/Berlin /etc/localtime"
}
